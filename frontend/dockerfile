FROM node:alpine as builder
WORKDIR /frontend
COPY package.json .
COPY ./ ./
RUN npm run build

FROM nginx:alpine
RUN rm -rf /etc/nginx/sites-available/nginx.conf
COPY ./nginx/nginx.conf /etc/nginx/sites-available/nginx.conf

RUN rm -rf /var/www/html/*
COPY --from=builder /frontend/dist /var/www/html

EXPOSE 80
ENTRYPOINT ["nginx", "-g", "daemon off;"]
